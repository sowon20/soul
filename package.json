{
  "name": "soul-app",
  "version": "0.1.0",
  "private": true,
  "description": "Soul AI - Personal AI Assistant",
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd soul && PORT=4000 node server/index.js",
    "dev:frontend": "cd client && npm run dev",
    "start": "cd soul && NODE_ENV=production node server/index.js",
    "build": "cd client && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
